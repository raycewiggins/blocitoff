<div class="row">
  <div class="col-md-6">
    <%= form_for [current_user, @item] do |f| %>
      <div class="form-group">
      <strong><%= f.label "New item" %></strong>
        <%= f.text_field :name, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.submit "Add", class: 'btn btn-success', remote: true %>
      </div>
    <% end %>
  </div>
</div>
